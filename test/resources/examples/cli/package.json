{
    "name": "@kapeta/cli",
    "version": "0.0.1",
    "description": "",
    "main": "dist/src/index.js",
    "type": "commonjs",
    "scripts": {
        "prepare:hosts": "node -r ts-node/register ./scripts/prepare-hosts.ts",
        "prebuild": "cpx \"./package.json\" dist/src",
        "build": "tsc",
        "postbuild": "pkg package.json",
        "predev": "npm run prepare:hosts",
        "dev": "ts-node -r tsconfig-paths/register src/index.ts",
        "prewatch": "npm run prepare:hosts",
        "watch": "nodemon --exec 'ts-node -r tsconfig-paths/register' src/index.ts"
    },
    "bin": {
        "cli": "./bin/cli"
    },
    "pkg": {
        "scripts": [
            "dist/src/cli.js"
        ],
        "assets": [],
        "targets": [
            "node18-alpine-x64",
            "node18-alpine-arm64",
            "node18-linux-x64",
            "node18-linux-arm64",
            "node18-linuxstatic-x64",
            "node18-linuxstatic-arm64",
            "node18-macos-x64",
            "node18-macos-arm64",
            "node18-win-x64",
            "node18-win-arm64"
        ],
        "outputPath": "dist/bin"
    },
    "dependencies": {
        "@kapeta/nodejs-api-client": "^0.2.0",
        "@kapeta/npm-package-handler": "^0.0.21",
        "commander": "^12.0.0",
        "@kapeta/sdk-config": "^2",
        "@kapeta/sdk-rest": "^1.0.1",
        "@kapeta/sdk-rest-client": "^3.3"
    },
    "bundledDependencies": true,
    "devDependencies": {
        "@kapeta/prettier-config": "^0.6.2",
        "@types/node": "^20.11.17",
        "cpx": "^1.5.0",
        "nodemon": "^3.0.3",
        "pkg": "^5.8.1",
        "prettier": "^3.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "prettier": "@kapeta/prettier-config"
}
